<Window x:Class="Password_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Generator"
        mc:Ignorable="d"
        Title="Password Generator" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Length:"/>
            <TextBox Width="300" x:Name="lengthBox" />

            <Label Content="Password:" />
            <TextBox IsReadOnly="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" x:Name="generatedPasswordBox" Margin="0, 5" />
            <Button Content="Generate" MaxWidth="150" Margin="5" Padding="5" Click="OnGenerateButtonClick" />
        </StackPanel>
    </Grid>
</Window>
